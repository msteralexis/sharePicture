

{% extends 'base.twig' %}
{% block content %}


<script src="/views/js/detailsAlbum.js"> </script>

<div class="row">
    <div class="col-lg-6 col-md-6 col-xs-6 col-sm-6 cadre">

        <h2> Details albums  </h2>
        <table>
            <thead>
                <tr>
                    <th colspan="2"> DÃ©tails </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td> Nom </td>
                    <td> 
                        {{album.getNom}}
                        <input id="idAlbum" name="idAlbum" hidden value="{{album.getId}}" > 
                    </td> 
                </tr>
                <tr>
                    <td> Date </td>
                    <td> {{album.getDate}} </td>
                </tr>
                <tr>
                    <td> Url</td>
                    <td> {{url}}
                        <a  id="copierUrl" class="Button"  value="{{url}}"> copier   </a>   
                    </td>
                </tr>
                 <tr>
                    <td> Affichage </td>
                    <td> 
                        <input type="checkbox" class="boutonGliserDeposer" id="boutonGliserDeposer" {% if album.getAffiche != 0 %} checked {% endif %} >
                        <label for="boutonGliserDeposer"> </label> 
                    </td>
                </tr>
               
            </tbody>
        </table>     
    </div>

    <div class="col-lg-6 col-md-6 col-xs-6 col-sm-6 cadre">
        <h2> Drop nouvelle photo  </h2>
        <div id="drop"  >
        </div>   
        <input class="button" type="file" id="inputPhoto" name="inputPhoto" accept="image/png, image/jpeg, image/jpg"> 
    </div>     

    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 cadre">
        <div id="listAlbum"> 
            {% for list in album.getPhoto %}
                <article> 
                    <img src="{{list.getImage}}" alt="Base64 Image">  
                    <img src="/views/image/suprime.png" class="suprime" value="{{list.getId}}">
                </article> 
            {% endfor %}
        </div> 
    </div> 
    
</div> 

{% endblock %}